#include<iostream>
#include<memory>
#include<cstring>

using  namespace std;

class Car{
  char name[20];
public:
  friend void printName(Car*);
  void setName(char* name);

};

void Car::setName(char *name){
  strcpy(this->name, name);
}

void printName(Car* car){
  cout<<"Name of the car: "<<car->name<<endl;
}

