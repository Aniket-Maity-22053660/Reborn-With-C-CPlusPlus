#include<iostream>
#include<memory>

using namespace std;

void swap(unique_ptr<int []> &ptr, int i, int j){
  int temp = ptr[i];
  ptr[i] = ptr[j];
  ptr[j] = temp;
}

void arrange(unique_ptr<int []> &ptr, int i, int num){
  if(i < num - 1){
    if(ptr[i] > ptr[i + 1]){
      swap(ptr, i, i + 1);
    }
    arrange(ptr, i + 1, num);
  }
}

void bubbleSort(unique_ptr<int []> &ptr, int num){
  if(num > 1){
    arrange(ptr, 0, num);
    bubbleSort(ptr, num - 1);
  }
}

int main(){
  int num;
  cout<<"Enter the total number of array elements: ";
  cin>>num;
  unique_ptr<int []> ptr = make_unique<int []>(num);
  cout<<"Enter the array elements:- "<<endl;
  for(int i = 0 ; i < num ; i++){
    cout<<"Enter element - "<<(i + 1)<<": ";
    cin<<ptr[i];
  }
  cout<<"Given array: ";
  for(int i = 0 ; i < num ; i++){
    cout<<ptr[i]<<" ";
  }
  putchar('\n');
  bubbleSort(ptr, num);
  cout<<"Sorted array: ";
  for(int i = 0 ; i < num ; i++){
    cout<<ptr[i]<<" ";
  }
  putchar('\n');
  return 0;
}
