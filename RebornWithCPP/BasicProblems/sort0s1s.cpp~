#include<iostream>
#include<deque>

using namespace std;

void sort0s1s(deque<int> &arr, int i, int j){
  if(i > j){
    return;
  }
  if(arr.at(i) == 1 && arr.at(j) == 0){
    int temp = arr.at(i);
    arr.at(i) = arr.at(j);
    arr.at(j) = temp;
    i++; j--;
  }else if(arr.at(i) == 0){
    i++;
  }else if(arr.at(j) == 1){
    j--;
  }
  sort0s1s(arr, i, j);
  return;
}

int main(){

  int num;
  cout<<"Enter the number of elements you want to insert in the array: ";
  cin>>num;
  deque<int> arr(num);
  cout<<"In this problem we want to sort the 0s and 1s in non decreasing order:- "<<endl;
  cout<<"Enter the elements:- "<<endl;
  for(int i = 0 ; i < num ; i++){
    cout<<"Enter element - "<<(i + 1)<<": ";
    cin>>arr.at(i);
  }
  sort0s1s(arr, 0, num - 1);
  deque<int>::iterator itr;
  cout<<"Sorted 0s and 1s: ";
  for(itr = = arr.begin() ; itr != arr.end() ; itr++){
    cout<<*itr<<" ";
  }
  putchar('\n');
  return 0;
}
