int main(){
  int num;
  cout<<"Enter the size of the array: ";
  cin>>num;
  cout<<"Enter the contents of the array:- "<<endl;
  vector<int> arr(num);
  for(int i = 0 ; i < num ; i++){
    cout<<"enter the element-"<<i<<":";
    cin>>arr.at(i);
  }
  cout<<"Contents of the array: ";
  printArray(arr);
  for(int i = (num / 2) - 1 ; i >= 0 ; i--){
    buildMaxHeap(arr, i);
  }
  cout<<"After constructing the max heap: ";
  printArray(arr);
}


